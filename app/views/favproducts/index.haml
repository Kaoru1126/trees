= render 'shared/navBar'
.container
  .row.pt_20.fs_50
    .col.s12.z-depth-3.trans_bg_grey.text_wh.center-align
      = "#{@user.nickname}" +"の"
      %br/
      = "お気に入りストレイン一覧"
    .col.s12.fs_26.center-align
      = paginate(@userFavproducts)
  .row
    - @userFavproducts.each do |userFav|
      = link_to product_path (userFav.product.id) do
        -if userFav.product.dominant == "Sativa"
          .col.s6.z-depth-3.center-align.card-panel.hoverable.link_to_show.waves-effect.amber
            .col.s12
              = image_tag userFav.product.productImage, class: "circle index_img_size"
            .col.s12.fs_30
              .col.s4.left
                %i.fa.fa-tree
                  = ": " + "#{userFav.product.watch_counts}"
              .col.s4.left
                %i.fa.fa-heart
                  = ": " + "#{userFav.product.fav_counts}"
              .col.s4.right
                %i.fa.fa-comments-o
                  = ": " + "#{userFav.product.review_counts}"
            .col.s12
              .col.s12.fs_30.dominant
                = userFav.product.dominant
              .col.s12.fs_50.truncate.bold
                = userFav.product.productName
        -elsif userFav.product.dominant == "Indica"
